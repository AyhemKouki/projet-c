{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run raylib",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "-I", "C:/raylib/include",
                "-L", "C:/raylib/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o", "main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build Raylib project"
        }
    ]
}
